<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.peleton.cheque"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <uses-permission
        android:name="android.permission.INTERNET"
        android:maxSdkVersion="19" />
    <uses-permission
        android:name="android.permission.ACCESS_NETWORK_STATE"
        android:maxSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <uses-library android:name="android.test.runner" />

        <activity
            android:name="com.peleton.cheque.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.peleton.cheque.SettingActivity"
            android:label="@string/title_activity_setting" >
        </activity>
        <activity
            android:name="com.peleton.cheque.MainActivity"
            android:configChanges="keyboardHidden"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.peleton.cheque.SelectActivity"
            android:label="@string/title_activity_select" >
        </activity>
        <activity
            android:name="com.peleton.cheque.InfoActivity"
            android:label="@string/title_activity_info" >
        </activity>
        <activity
            android:name="com.peleton.cheque.SearchActivity"
            android:label="@string/title_activity_search" >
        </activity>
        <activity
            android:name="com.peleton.cheque.ReviseActivity"
            android:label="@string/title_activity_revise" >
        </activity>
    </application>

</manifest>
